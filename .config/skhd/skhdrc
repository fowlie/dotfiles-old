# Inspired by https://cbrgm.net/post/2021-05-5-setup-macos

# [r]estart yabai service
ctrl + alt + cmd - r : yabai --restart-service

# open terminal, blazingly fast compared to iTerm/Hyper
cmd - return : /Applications/Rio.app/Contents/MacOS/rio

# open web [b]rowser
cmd + shift - b : "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"

# yabai commands
# change layout of desktop
alt - b : yabai -m space --layout bsp
alt - f : yabai -m space --layout float
alt - s : yabai -m space --layout stack

# alternate display focus (d for [d]isplay)
cmd - d : yabai -m display --focus recent

ctrl + cmd - 1  : yabai -m window --display 1; yabai -m display --focus 1
ctrl + cmd - 2  : yabai -m window --display 2; yabai -m display --focus 2

# make window the main window
ctrl + cmd - return : yabai -m window --swap largest

# move focus
cmd - left  : yabai -m window --focus west
cmd - down  : yabai -m window --focus south
cmd - up    : yabai -m window --focus north
cmd - right : yabai -m window --focus east

# move windows
ctrl + cmd - left  : yabai -m window --swap west
ctrl + cmd - down  : yabai -m window --swap south
ctrl + cmd - up    : yabai -m window --swap north
ctrl + cmd - right : yabai -m window --swap east

# toggle window split
ctrl + cmd - s : yabai -m window --toggle split

# (alt) set insertion point in focused container using arrows
cmd + alt - left  : yabai -m window --insert west
cmd + alt - down  : yabai -m window --insert south
cmd + alt - up    : yabai -m window --insert north
cmd + alt - right : yabai -m window --insert east
