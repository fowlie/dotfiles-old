# open terminal, blazingly fast compared to iTerm/Hyper
cmd + shift - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~
# cmd + shift - return : /Applications/Warp.app/Contents/MacOS/stable

# open web browser
cmd + shift - w : "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"

# alternate display focus (d for [d]isplay)
cmd - d : yabai -m display --focus recent

# make window the main window
ctrl + alt - return : yabai -m window --swap largest

# move focus
alt - left  : yabai -m window --focus west
alt - down  : yabai -m window --focus south
alt - up    : yabai -m window --focus north
alt - right : yabai -m window --focus east

# move windows
ctrl + alt - left  : yabai -m window --swap west
ctrl + alt - down  : yabai -m window --swap south
ctrl + alt - up    : yabai -m window --swap north
ctrl + alt - right : yabai -m window --swap east

# increase window size
ctrl + alt + shift - left  : yabai -m window --resize left:-50:0
ctrl + alt + shift - down  : yabai -m window --resize bottom:0:50
ctrl + alt + shift - up    : yabai -m window --resize top:-50:0
ctrl + alt + shift - right : yabai -m window --resize right:50:0
